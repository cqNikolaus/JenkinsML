pipeline {
  agent any
  stages {
    stage('Build Docker Image') {
      steps {
        sh 'docker build -t train-model ./training'
      }
    }
    stage('Copy artifact') {
      steps {
        copyArtifacts(projectName: 'build-data-extraction');
      }
    }
    stage('Run Container') {
      steps {
        // Debug: Zeigt die Datei im Jenkins-Container, aber nicht im Docker-Container
        sh 'docker run --rm -v $WORKSPACE:/workspace train-model ls -la /workspace || echo "Fehlermeldung: Kein Zugriff auf /workspace im Container"'
        // Fix: Nutze den absoluten Mount-Pfad, falls $WORKSPACE nicht funktioniert
        sh 'docker run --rm -v /var/jenkins_home/workspace/ml-model-training:/workspace train-model --input_csv /workspace/build_data.csv --output_model /workspace/model.pkl'
      }
    }
  }
  post {
    always {
      archiveArtifacts artifacts: 'model.pkl', fingerprint: true
    }
  }
}
